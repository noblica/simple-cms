{
  "name": "simple-cms",
  "version": "0.1.0",
  "private": true,
  "description": "A simple CMS",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:server": "json-server --watch db.json --port 3001",
    "check-types": "tsc --noemit",
