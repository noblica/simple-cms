    "lint:fix": "npm run check-types && next lint --fix . && prettier --write ."
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "json-server": "^0.17.0",
    "next": "12.1.0",
    "postcss": "^8.4.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "typescript": "4.6.2"
  }
}
